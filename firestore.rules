rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // - A user can only read their own document.
    // - A user can only create their own document.
    // - A user can only update their own document.
    // - A user cannot delete their own document (optional, but safer).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow delete: if false;

      // Audiences Subcollection
      // - A user can only read their own audience documents.
      // - A user can create their own audience documents.
      // - A user can update their own audience documents.
      // - A user can delete their own audience documents.
      match /audiences/{audienceId} {
        allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
